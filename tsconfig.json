{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "target": "es5",
        "isolatedModules": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "types",
        "sourceMap": true,
        "outDir": "dist",
        "emitDeclarationOnly": false,
        "baseUrl": ".",
        "paths": {
            "@icons/*": [
                "./src/assets/*"
            ]
        }
    },
    "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
    ],
    "include": [
        "./src",
        "./src/@types"
    ],
    "files": [
        "./src/@types/custom.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}